---
const { title, image, slug, tags } = Astro.props;
---

<a href={`/recipes/${slug}`} class="block border rounded-lg overflow-hidden shadow hover:shadow-lg transition transform hover:scale-105">
  <img src={image} alt={title} class="w-full h-48 object-cover"/>
  <div class="p-4">
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="mt-2 text-sm text-gray-500">{tags.join(', ')}</p>
  </div>
</a>